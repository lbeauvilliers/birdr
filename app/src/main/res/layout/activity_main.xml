<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ie.dit.birdr.MainActivity"
    android:orientation="vertical"
    android:background="@color/green">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="ie.dit.birdr.MainActivity"
        android:orientation="vertical"
        android:background="@color/green">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bird Check-In"
            android:padding="10dp"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"/>

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type bird name here ..."
            android:background="@color/white"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/check_in_bird_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check-In Bird"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:onClick="confirmBird"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="ie.dit.birdr.MainActivity"
        android:orientation="vertical"
        android:background="@color/white">

        <Button
            android:id="@+id/my_account_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Account"
            android:layout_marginTop="20dp"
            android:onClick="viewMyAccount"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:background="@color/green"/>

        <Button
            android:id="@+id/all_birds_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View All Birds"
            android:onClick="viewAllBirds"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:background="@color/green"/>

        <Button
            android:id="@+id/nearby_birds_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Nearby Birds"
            android:onClick="viewNearbyBirds"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:background="@color/green"/>

        <Button
            android:id="@+id/identify_bird_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bird Identification Guide"
            android:layout_marginBottom="20dp"
            android:onClick="identifyBird"/>

    </LinearLayout>

</LinearLayout>
